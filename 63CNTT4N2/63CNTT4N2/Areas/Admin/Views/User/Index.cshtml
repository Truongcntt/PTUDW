@model IEnumerable<MyClass.Model.Users>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

@section header {
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.css" />

    <link href="~/Public/css/cdn.datatables.net_1.13.6_css_jquery.dataTables.min.css" rel="stylesheet" />
}

@section footer {
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.js"></script>

    <script src="~/Public/js/cdn.datatables.net_1.13.6_js_jquery.dataTables.min.js"></script>
    <script>let table = new DataTable('#myTable');</script>
}
<div class="content-wrapper">

    <!-- Main content -->
    <section class="content my-2">

        <!-- Default box -->
        <div class="card">
            <div class="card-header">
                <div class="row">
                    <div class="col-md-6">
                        <strong class="text-danger">DANH SÁCH TÀI KHOẢN</strong>
                    </div>
                    <div class="col-md-6 text-right">
                        <a href="@Url.Action("Create","User")" class="btn-sm btn-success"> <i class="fa fa-plus"></i>Thêm</a>
                        <a href="@Url.Action("Trash","User")" class="btn-sm btn-danger"> <i class="fa fa-trash"></i>Thùng rác</a>
                    </div>

                </div>
            </div>
            <div class="card-body">
                @*Hien thi noi dung thong bao ngay ben tren bang du lieu*@
                @Html.Partial("Message")
                <table class="table table-bordered table-striped" id="myTable">
                    <thead>
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.Username)</th>
                            <th>@Html.DisplayNameFor(model => model.Password)</th>
                            <th>@Html.DisplayNameFor(model => model.FullName)</th>
                            <th>@Html.DisplayNameFor(model => model.Email)</th>
                            <th>@Html.DisplayNameFor(model => model.Phone)</th>
                            <th>@Html.DisplayNameFor(model => model.Address)</th>
                            <th>Chức năng</th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.Username)</td>
                                <td>@Html.DisplayFor(modelItem => item.Password)</td>
                                <td>@Html.DisplayFor(modelItem => item.FullName)</td>
                                <td>@Html.DisplayFor(modelItem => item.Email)</td>
                                <td>@Html.DisplayFor(modelItem => item.Phone)</td>
                                <td>@Html.DisplayFor(modelItem => item.Address)</td>
                                <td>
                                    @if (item.Status == 1)
                                    {
                                        <a href="@Url.Action("Status","User", new { id = item.Id })" class="btn-sm btn-success"> <i class="fa fa-toggle-on"></i></a> }
                                    else
                                    {
                                        <a href="@Url.Action("Status","User", new { id = item.Id })" class="btn-sm btn-danger"> <i class="fa fa-toggle-off"></i></a>}
                                    <a href="@Url.Action("Details","User", new { id = item.Id })" class="btn-sm btn-primary"> <i class="fa fa-eye"></i></a>
                                    <a href="@Url.Action("Edit","User", new { id = item.Id })" class="btn-sm btn-info"> <i class="fa fa-edit"></i></a>
                                    <a href="@Url.Action("DelTrash","User", new { id = item.Id })" class="btn-sm btn-danger"> <i class="fa fa-trash"></i></a>
                                </td>
                            </tr>
}
                    </tbody>
                </table>
            </div><!-- /.card-body -->
        </div><!-- /.card -->
    </section><!-- /.content -->
</div>