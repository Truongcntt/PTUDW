@model MyClass.Model.Posts

@{
    ViewBag.Title = "Xóa trang đơn";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="content-wrapper">
        <section class="content my-2">
            <div class="card">
                <div class="card-header">
                    <div class="row">
                        <div class="col-md-6">
                            <strong class="text-danger">XÓA TRANG ĐƠN</strong>
                        </div>
                        <div class="col-md-6 text-right">
                            <a href="@Url.Action("Index","Page")" class="btn-sm btn-info"> <i class="fa fa-long-arrow-alt-left"></i> Quay lại</a>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    @Html.Partial("Message")
                    <table class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>@Html.DisplayNameFor(model => model.Id)</th>
                                <th>@Html.DisplayNameFor(model => model.Tittle)</th>
                                <th>@Html.DisplayNameFor(model => model.PostType)</th>
                                <th class="col-1">@Html.DisplayNameFor(model => model.Img)</th>

                                <th>Chức năng</th>
                            </tr>
                        </thead>

                        <tbody>
                            <tr>
                                <td>@Html.DisplayFor(model => model.Id)</td>
                                <td>@Html.DisplayFor(model => model.Tittle)</td>
                                <td>@Html.DisplayFor(model => model.PostType)</td>
                                <td><img src="~/Public/img/page/@Model.Img" alt="Img" class="img-fluid" /></td>

                                <td>
                                    <button class="btn-sm btn-danger" type="submit" name="Delete"> Xóa <i class="fa fa-trash"></i> </button>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div><!-- /.card-body -->
            </div><!-- /.card -->
        </section><!-- /.content -->
    </div><!-- /.content-wrapper -->
}
